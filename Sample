$pod = "airflow-webserver-xxxxx"
kubectl cp "C:\certs\corp-ca.crt" "airflow/$pod`:/usr/local/share/ca-certificates/corp-ca.crt"
kubectl -n airflow exec $pod -- sh -c "chmod 644 /usr/local/share/ca-certificates/corp-ca.crt && if command -v update-ca-certificates >/dev/null 2>&1; then update-ca-certificates; else apk add --no-cache ca-certificates >/dev/null 2>&1 && update-ca-certificates; fi"
kubectl -n airflow exec -it $pod -- sh -c "curl -v --max-time 10 https://pypi.org/simple/ 2>&1 | sed -n '1,60p'"
