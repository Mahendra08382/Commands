kubectl -n airflow logs deploy/airflow-webserver --tail=200

# check scheduler pod logs and confirm tasks are running there
kubectl -n airflow get pods
kubectl -n airflow logs deploy/airflow-scheduler --tail=200

# from the webserver pod, check whether it can read the scheduler logs path (if mounted)
kubectl -n airflow exec -it pod/<airflow-webserver-pod> -- ls -la /opt/airflow/logs || true
