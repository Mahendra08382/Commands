kubectl -n airflow patch deploy airflow-scheduler --type='json' -p '[{"op":"add","path":"/spec/template/spec/securityContext","value":{"fsGroup":65534}}]'
kubectl -n airflow patch deploy airflow-web --type='json' -p '[{"op":"add","path":"/spec/template/spec/securityContext","value":{"fsGroup":65534}}]'

# restart pods
kubectl -n airflow rollout restart deploy/airflow-scheduler
kubectl -n airflow rollout restart deploy/airflow-web
