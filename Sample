# get scheduler pod name
$pod = kubectl -n $ns get pods -l app=airflow-scheduler -o jsonpath='{.items[0].metadata.name}'
Write-Output "POD: $pod"

# show mounts (look for dags, dags-src)
kubectl -n $ns exec -it $pod -- sh -c "mount | grep /opt/airflow/dags || true; mount | grep /src/dags || true" 

# list contents inside the mounts
kubectl -n $ns exec -it $pod -- sh -c "ls -la /src/dags || true; ls -la /work/dags || true; ls -la /opt/airflow/dags || true"
