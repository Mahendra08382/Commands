kubectl -n airflow set env deploy/airflow-web AIRFLOW__API__SECRET_KEY=7e2f3b9c0d1a48efb6c25d4e91a7f3c4d8e1b2a9f7c0436d91b8a62e3d5c9f72
kubectl -n airflow set env deploy/airflow-scheduler AIRFLOW__API__SECRET_KEY=7e2f3b9c0d1a48efb6c25d4e91a7f3c4d8e1b2a9f7c0436d91b8a62e3d5c9f72

# restart to apply
kubectl -n airflow rollout restart deploy/airflow-web
kubectl -n airflow rollout restart deploy/airflow-scheduler

kubectl -n airflow get deploy airflow-web -o yaml | Select-String 'AIRFLOW__API__SECRET_KEY' -Context 0,1
kubectl -n airflow get deploy airflow-scheduler -o yaml | Select-String 'AIRFLOW__API__SECRET_KEY' -Context 0,1


# from webserver pod
$web = (kubectl -n airflow get pods --selector=app=airflow-web --no-headers -o custom-columns=NAME:.metadata.name)
kubectl -n airflow exec -it $web -- curl -v http://airflow-scheduler:8793/health
