# list pods with labels so you can see scheduler pod and a label to use as selector
kubectl -n airflow get pods --show-labels

# find scheduler pod name (if there is a label, this helps)
kubectl -n airflow get pods -l app.kubernetes.io/component=scheduler --show-labels || true

# if nothing returned above, list pods and inspect scheduler pod labels:
kubectl -n airflow get pods -o wide
# pick the scheduler pod name from previous output and then:
kubectl -n airflow get pod <scheduler-pod-name> -o jsonpath='{.metadata.labels}' | jq .
