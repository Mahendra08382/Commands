kubectl -n airflow get svc
kubectl -n airflow describe svc airflow-scheduler
kubectl -n airflow get endpoints airflow-scheduler -o yaml


kubectl -n airflow get pods -l component=scheduler --show-labels
kubectl -n airflow get pod -l component=scheduler -o wide
kubectl -n airflow describe pod <scheduler-pod-name>
kubectl -n airflow get pod <scheduler-pod-name> -o yaml | yq '.spec.containers[].ports'


kubectl -n airflow logs <scheduler-pod-name> -c scheduler --tail=200


kubectl -n airflow exec -it <webserver-pod> -- curl -v http://airflow-scheduler:8793/health || true
# or test a real log endpoint path like:
kubectl -n airflow exec -it <webserver-pod> -- curl -v "http://airflow-scheduler:8793/log?dag_id=sample&task_id=..&execution_date=.."
