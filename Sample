# pod names
$web = kubectl -n airflow get pods --selector=app=airflow-web --no-headers -o custom-columns=NAME:.metadata.name
$sched = kubectl -n airflow get pods --selector=app=airflow-scheduler --no-headers -o custom-columns=NAME:.metadata.name

# list logs on scheduler (where tasks write)
kubectl -n airflow exec -it $sched -- sh -c "ls -R /opt/airflow/logs | sed -n '1,120p'"

# confirm webserver can see same files
kubectl -n airflow exec -it $web -- sh -c "ls -R /opt/airflow/logs | sed -n '1,120p'"
